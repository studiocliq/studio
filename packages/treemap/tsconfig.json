{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "components/*": [
        "./src/components/*"
      ]
    },
    "composite": true,
    "noEmit": false,
    "incremental": true,
    "allowJs": true
  },
  "include": [
    "./src/**/*",
    "./@types"
  ],
  "exclude": [
    "./dist"
  ]
}
